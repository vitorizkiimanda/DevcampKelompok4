<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.EmasBeliActivity"
        android:background="@color/colorBlack">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
                android:id="@+id/gold_buy_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:padding="@dimen/spacing48dp"
                android:gravity="center"
                android:layout_marginEnd="@dimen/spacing32dp"
                android:background="@android:color/holo_purple"
        >


            <ImageView android:layout_width="32dp"
                       android:layout_height="32dp"
                       android:src="@drawable/ic_arrow"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kembali"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="@dimen/spacing4dp"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/gold_buy_help"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:padding="@dimen/spacing48dp"
                android:background="@android:color/holo_green_light"
                android:gravity="center"
                android:layout_marginStart="@dimen/spacing32dp"
                android:focusableInTouchMode="true"
                android:focusable="true"
        >

            <ImageView android:layout_width="32dp"
                       android:layout_height="32dp"
                       android:src="@drawable/ic_help"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bantuan"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="@dimen/spacing4dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/gold_buy_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing16dp"
            android:gravity="center"
            android:background="@android:color/holo_orange_light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    >

        <ImageView android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:src="@drawable/emas"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beli Emas"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/spacing4dp"/>
        <TextView
                android:id="@+id/gold_amout_rupiah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp0"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/spacing4dp"
                android:textSize="@dimen/font24sp"/>
        <TextView
                android:id="@+id/gold_amout_gram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(0 gram)"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/spacing4dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
                android:id="@+id/gold_buy_min"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:paddingVertical="@dimen/spacing48dp"
                android:gravity="center"
                android:background="@android:color/holo_red_light"
                android:layout_marginEnd="@dimen/spacing32dp"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="@dimen/font36sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Gram"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="@dimen/spacing4dp"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/gold_buy_plus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:paddingVertical="@dimen/spacing48dp"
                android:background="@android:color/holo_blue_bright"
                android:gravity="center"
                android:layout_marginStart="@dimen/spacing32dp"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="@dimen/font36sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Gram"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="@dimen/spacing4dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>